<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/laptimes_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/laptimeDist"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:layout_margin="1dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="@string/workoutDistance"/>
        <TextView
            android:id="@+id/laptimeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:layout_margin="8dp"
            android:text = "@string/workoutTime"/>

        <TextView
            android:id="@+id/laptimeMetersUp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:layout_margin="4dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text = "▲"/>

        <TextView
            android:id="@+id/laptimeMetersDown"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:layout_margin="4dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text = "▼"/>

        <!--<NumberPicker
            android:id="@+id/laptime_distance_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></NumberPicker>-->
    </LinearLayout>
</LinearLayout>