<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/showWorkoutsAggregatedRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.workout.ShowWorkoutsAggregatedDiagramActivity">

    <LinearLayout
        android:id="@+id/showWorkoutsAggregatedParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fastestAverage"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/greatestDistance"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            />

    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/aggregatedWorkoutsAverageSpeed"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</LinearLayout>